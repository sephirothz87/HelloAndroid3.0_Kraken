<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:orientation="vertical">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click button to make specific file to path /sdcard/sdfulltest/" />

    <Button
        android:id="@+id/make_file_1kb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1KB" />

    <Button
        android:id="@+id/make_file_5kb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5KB" />

    <Button
        android:id="@+id/make_file_10kb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10KB" />

    <Button
        android:id="@+id/make_file_50kb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50KB" />

    <Button
        android:id="@+id/make_file_100kb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100KB" />

    <Button
        android:id="@+id/make_file_500kb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500KB" />

    <Button
        android:id="@+id/make_file_1mb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1MB" />

    <Button
        android:id="@+id/make_file_10mb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10MB" />

    <Button
        android:id="@+id/make_file_50mb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50MB" />

    <Button
        android:id="@+id/make_file_100mb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100MB" />

    <Button
        android:id="@+id/make_file_500mb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500MB" />

    <Button
        android:id="@+id/make_file_1gb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1GB" />

</LinearLayout>
